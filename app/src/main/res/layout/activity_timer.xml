<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".TimerActivity">

    <EditText
        android:id="@+id/time_input"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_txt_hint"
        android:maxLength="4"
        android:inputType="number"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/time_txt"
        />

    <Button
        android:id="@+id/set_time_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/time_input"
        android:layout_toEndOf="@id/time_input"
        android:textAllCaps="false"
        android:text="@string/set_time_txt"/>

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_time"
        android:textSize="60sp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_txt"
        android:layout_below="@+id/time_txt"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>